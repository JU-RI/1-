import pymysql
from board.crud import *

con = None

def myInfo():    # 내 정보 출력
    con = pymysql.connect(host = 'localhost', user = 'root', password = '1234', db = 'facebook')
    cur = con.cursor()
    sql = "select * from members where (id) = '100'"    #my_id
    result = cur.execute(sql)
    record = cur.fetchone()
    con.commit()
    con.close()
    return record



def insert():   # 게시물 등록
    con = pymysql.connect(host = 'localhost', user = 'root', password = '1234', db = 'facebook')
    cur = con.cursor()
    sql = "insert into board (content, date) values('%s', now())"
    cur.execute(sql)
    print("sql문 -> 전송 성공")
    con.commit()
    con.close()



def content_list():   # 게시물 목록 출력
    con = pymysql.connect(host = 'localhost', user = 'root', password = '1234', db = 'facebook')
    cur = con.cursor()
    sql = "select * from board"
    cur.execute(sql)
    
    result = []
    while True:
        record = cur.fetchone()
        if record == None:
            break
        else:
            print(record)
            result.append(record)
               
    con.commit()
    con.close()
    return result



def update():   # 게시물 수정
    con = pymysql.connect(host = 'localhost', user = 'root', password = '1234', db = 'facebook')
    cur = con.cursor()
    sql = "update board set (content) = '%s' where (id) = '100'"
    cur.execute(sql)
    print("sql문 -> 전송 성공")
    con.commit()
    con.close()



def delete():   # 게시물 삭제
    con = pymysql.connect(host = 'localhost', user = 'root', password = '1234', db = 'facebook')
    cur = con.cursor()
    sql = "delete from board where (content_num) = 5"
    cur.execute(sql)
    print("sql문 -> 전송 성공")
    con.commit()
    con.close()
